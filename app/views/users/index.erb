<html lang="en">
  <head>
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width">
    <meta name="author" content="SitePoint">

    <link type="text/css" rel="stylesheet" href="css/nav-styles.css">
    <link type="text/css" rel="stylesheet" href="css/peep-styles.css">
    <link href="https://fonts.googleapis.com/css?family=Psoppins%26display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">

  </head>

  <body>

    <nav>
      <div class="logo">
          <h4>Chitter</h4>
      </div>
      <ul class="nav-links">
          <li><a href="/peeps">Home</a></li>
          <li><a href="#">Explore</a></li>
          <li>
            <form action="/sessions/destroy" method="post">
              <input class="btn" type="submit" name="sign_out" value="Sign out" />
            </form>
          </li>
      </ul>
      <div class="burger">
          <div class="line1"></div>
          <div class="line2"></div>
          <div class="line3"></div>
      </div>
    </nav>

    <% if @user %>
      <h2 class="welcome-msg"> <%= @user.username %>'s wall </h2>
        <% @user.peeps.each do |peep| %>
          <ul>
            <div class="container">
              <div class="square">
                <!-- peep user -->
                <% peep.user.each do |user| %>
                  <div class="h1"><h4><%= user.username %></h4></div>
                <% end %>
                <!-- peep date -->
                <div class="created">
                  <%= peep.created_at %>
                </div>
                <!-- peep body -->
              <p><%= peep.body %></p>
                <!-- peep hashtags -->
              <% peep.hashtags.each do |tag| %>
                <input class="hashtags" type="submit" name="display_tag" value="<%= tag.content %>">
              <% end %>
            </div>
          </ul>
        <% end %>

        <h2>Peeps that I've been tagged in</h2>
        <% @user.tagged_peeps.each do |peep| %>

          <ul>
            <div class="container">
              <div class="square">
                <h3> Tagged by, <%= peep[1][:tagged_by] %> </h3>
                <!-- peep user -->
                <% peep[0].user.each do |user| %>
                  <div class="h1"><h4><%= user.username %></h4></div>
                <% end %>
                <!-- peep date -->
                <div class="created">
                  <%= peep[0].created_at %>
                </div>
                <!-- peep body -->
              <p><%= peep[0].body %></p>
                <!-- peep hashtags -->
                <% peep[0].hashtags.each do |tag| %>
                  <input class="hashtags" type="submit" name="display_tag" value="<%= tag.content %>">
                <% end %>
            </div>
          </ul>

        <% end %>
      <% else %>
      Sign in to use Chitter!
    <% end %>


  </body>
</html>
